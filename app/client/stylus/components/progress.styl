progressColors(progress-color)
  background-color: hashGet($colors, "mid-" + progress-color)
  background-image: linear-gradient($white, hashGet($colors, "bright-" + progress-color) 1px, hashGet($colors, "mid-" + progress-color) 2px)
  border: 1px solid hashGet($colors, "dark-" + progress-color)
  box-shadow: inset 0 -1px 1px 1px hashGet($colors, "bright-" + progress-color), 0 3px 0 hashGet($colors, "dark-" + progress-color)

defaultProgress()
  progressColors("blue")
  border-radius: $border-button-radius
  position: relative
  top: -3px
  transition: all 1s ease

progress
  -webkit-appearance: none
  background-color: $black
  border-radius: $border-button-radius
  border: 1px solid $dark-gray
  box-sizing: border-box
  color: $mid-blue
  display: block
  height: $line-base * 2
  margin-bottom: $line-base
  padding: 0 1px 1px
  position: relative
  transitions("all 1s ease")
  transition: all 1s ease
  width: 100%

  &:after
    color: $bright-blue
    content: attr(value) "/" attr(max)
    display: block
    font-weight: bold
    height: $line-base * 2 - 2px
    left: 0
    line-height: $line-base * 2 - 2px
    position: absolute
    text-align: center
    top: 0
    width: 100%

  &::-moz-progress-bar
    defaultProgress()
    margin-top: -3px
    -moz-transition: all 1s ease

  &::-webkit-progress-bar
    background-color: $black
    border-radius: $border-button-radius

  &::-webkit-progress-value
    defaultProgress()
    -webkit-transition: all 1s ease

  &.in-danger
    color: $mid-red

    &:after
      color: $bright-red

    &::-moz-progress-bar
      progressColors("red")

    &::-webkit-progress-value
      progressColors("red")

  &.on-track
    color: $mid-green

    &:after
      color: $bright-green

    &::-moz-progress-bar
      progressColors("green")

    &::-webkit-progress-value
      progressColors("green")